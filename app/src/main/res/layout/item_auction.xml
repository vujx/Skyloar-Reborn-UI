<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="auction"
            type="com.example.data.model.auction.AuctionEntityItem" />

        <import type="android.view.View" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <TextView
            android:id="@+id/tvCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/tv_borders"
            android:gravity="center"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:text="@{auction.cardName}"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tvStart"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvStart"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/tv_borders"
            android:gravity="center"
            android:text="@{Double.toString(auction.startingPrice)}"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@id/tvCard"
            app:layout_constraintEnd_toStartOf="@id/tvBid"
            app:layout_constraintStart_toEndOf="@id/tvCard"
            app:layout_constraintTop_toTopOf="@id/tvCard" />

        <TextView
            android:id="@+id/tvBid"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/tv_borders"
            android:gravity="center"
            android:text="@{Double.toString(auction.currentPrice)}"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@id/tvCard"
            app:layout_constraintEnd_toStartOf="@id/tvBuyout"
            app:layout_constraintStart_toEndOf="@id/tvStart"
            app:layout_constraintTop_toTopOf="@id/tvCard" />

        <TextView
            android:id="@+id/tvBuyout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/tv_borders"
            android:gravity="center"
            android:text="@{Double.toString(auction.buyoutPrice)}"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@id/tvCard"
            app:layout_constraintEnd_toStartOf="@id/tvEnd"
            app:layout_constraintStart_toEndOf="@id/tvBid"
            app:layout_constraintTop_toTopOf="@id/tvCard" />

        <TextView
            android:id="@+id/tvEnd"
            android:layout_width="40dp"
            android:layout_height="0dp"
            android:background="@drawable/tv_borders"
            android:gravity="center"
            android:text="@{auction.endingOn}"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@id/tvCard"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tvBuyout"
            app:layout_constraintTop_toTopOf="@id/tvCard" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>