<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.ui.doc.DocFragment"
    android:background="#1E000000"
    android:orientation="vertical"
    >

  <androidx.appcompat.widget.AppCompatTextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="46dp"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      android:text="@string/swagger_documentation"
      android:textSize="24sp"
      android:textColor="@color/black"
      app:layout_constraintEnd_toEndOf="parent" />

  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:layout_marginStart="16dp"
      android:layout_marginTop="32dp"
      android:layout_marginEnd="16dp"
      android:layout_marginBottom="70dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="1.0">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

      <com.google.android.material.card.MaterialCardView
          android:id="@+id/firstCard"
          android:layout_width="176dp"
          android:layout_height="200dp"
          android:background="?attr/selectableItemBackground"
          android:clickable="true"
          android:focusable="true"
          app:cardCornerRadius="4dp"
          app:cardElevation="4dp"
          app:cardUseCompatPadding="true"
          app:layout_constraintBottom_toTopOf="@+id/thirdCard"
          app:layout_constraintEnd_toStartOf="@+id/secondCard"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="149dp"
            >

          <androidx.appcompat.widget.AppCompatImageView
              android:id="@id/firstCardImage"
              android:layout_width="wrap_content"
              android:layout_height="52dp"
              android:layout_marginTop="35dp"
              android:src="@drawable/doc_pic"
              android:scaleType="fitXY"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              />

          <androidx.appcompat.widget.AppCompatTextView
              android:id="@+id/titleAuction"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="8dp"
              android:paddingStart="10dp"
              android:text="@string/auctions"
              android:textColor="@color/black"
              android:textSize="15sp"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              tools:ignore="RtlSymmetry"
              />


          <androidx.appcompat.widget.AppCompatTextView
              android:id="@+id/doc_1"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="3dp"
              android:background="#3C000000"
              android:paddingStart="10dp"
              android:text="@string/docs_1"
              android:textColor="@color/black"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toBottomOf="@+id/firstCardImage"
              tools:ignore="RtlSymmetry"
              />

          <androidx.appcompat.widget.AppCompatTextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:paddingStart="10dp"

              android:text="@string/click_here_to_open_doc_in_new_tab"
              android:textSize="11sp"
              android:background="#3C000000"
              android:paddingTop="8dp"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintTop_toBottomOf="@+id/doc_1"
              tools:ignore="RtlSymmetry"
              />

        </androidx.constraintlayout.widget.ConstraintLayout>

      </com.google.android.material.card.MaterialCardView>

      <com.google.android.material.card.MaterialCardView
          android:id="@+id/secondCard"
          android:layout_width="176dp"
          android:layout_height="200dp"
          android:background="?attr/selectableItemBackground"
          android:clickable="true"
          android:focusable="true"
          app:cardCornerRadius="4dp"
          app:cardElevation="4dp"
          app:cardUseCompatPadding="true"
          app:layout_constraintBottom_toTopOf="@+id/fourthCard"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toEndOf="@+id/firstCard"
          app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent">

          <androidx.appcompat.widget.AppCompatTextView
              android:id="@+id/titleStat"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="8dp"
              android:paddingStart="10dp"
              android:text="@string/stat"
              android:textColor="@color/black"
              android:textSize="15sp"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              tools:ignore="RtlSymmetry"
              />

          <androidx.appcompat.widget.AppCompatImageView
              android:id="@id/secondCardImage"
              android:layout_width="wrap_content"
              android:layout_height="52dp"
              android:layout_marginTop="35dp"
              android:src="@drawable/doc_pic"
              android:scaleType="fitXY"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="parent" />


          <androidx.appcompat.widget.AppCompatTextView
              android:id="@+id/doc_2"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="3dp"
              android:paddingStart="10dp"
              android:text="@string/docs_2"
              android:textColor="@color/black"
              android:background="#3C000000"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toBottomOf="@+id/secondCardImage"
              tools:ignore="RtlSymmetry"
              />

          <androidx.appcompat.widget.AppCompatTextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:paddingStart="10dp"
              android:text="@string/click_here_to_open_doc_in_new_tab"
              android:textSize="11sp"
              android:background="#3C000000"
              android:paddingTop="8dp"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintTop_toBottomOf="@+id/doc_2"
              tools:ignore="RtlSymmetry"
              />
        </androidx.constraintlayout.widget.ConstraintLayout>

      </com.google.android.material.card.MaterialCardView>

      <com.google.android.material.card.MaterialCardView
          android:id="@+id/thirdCard"
          android:layout_width="176dp"
          android:layout_height="200dp"
          android:layout_marginTop="24dp"
          android:background="?attr/selectableItemBackground"
          android:clickable="true"
          android:focusable="true"
          app:cardCornerRadius="4dp"
          app:cardElevation="4dp"
          app:cardUseCompatPadding="true"
          app:layout_constraintEnd_toStartOf="@+id/fourthCard"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/firstCard">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="false"
            android:clipChildren="false"
            android:clipToPadding="false">

          <androidx.appcompat.widget.AppCompatTextView
              android:id="@+id/titleLeaderBoards"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="8dp"
              android:paddingStart="10dp"
              android:text="@string/leaderboards"
              android:textColor="@color/black"
              android:textSize="15sp"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              tools:ignore="RtlSymmetry"
              />

          <androidx.appcompat.widget.AppCompatImageView
              android:id="@id/thirdCardImage"
              android:layout_width="wrap_content"
              android:layout_height="52dp"
              android:layout_marginTop="35dp"
              android:src="@drawable/doc_pic"
              android:scaleType="fitXY"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="parent" />


          <androidx.appcompat.widget.AppCompatTextView
              android:id="@+id/doc_3"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="3dp"
              android:paddingStart="10dp"
              android:text="@string/docs_3"
              android:textColor="@color/black"
              android:background="#3C000000"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toBottomOf="@+id/thirdCardImage"
              tools:ignore="RtlSymmetry"
              />

          <androidx.appcompat.widget.AppCompatTextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:paddingStart="10dp"
              android:text="@string/click_here_to_open_doc_in_new_tab"
              android:textSize="11sp"
              android:background="#3C000000"
              android:paddingTop="8dp"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintTop_toBottomOf="@+id/doc_3"
              tools:ignore="RtlSymmetry"
              />


        </androidx.constraintlayout.widget.ConstraintLayout>

      </com.google.android.material.card.MaterialCardView>

      <com.google.android.material.card.MaterialCardView
          android:id="@+id/fourthCard"
          android:layout_width="176dp"
          android:layout_height="200dp"
          android:layout_marginTop="24dp"
          android:background="?attr/selectableItemBackground"
          android:clickable="true"
          android:focusable="true"
          app:cardCornerRadius="4dp"
          app:cardElevation="4dp"
          app:cardUseCompatPadding="true"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toEndOf="@+id/thirdCard"
          app:layout_constraintTop_toBottomOf="@+id/secondCard">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="true">

          <androidx.appcompat.widget.AppCompatTextView
              android:id="@+id/titleInfo"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="8dp"
              android:paddingStart="10dp"
              android:text="@string/info"
              android:textColor="@color/black"
              android:textSize="15sp"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              tools:ignore="RtlSymmetry"
              />

          <androidx.appcompat.widget.AppCompatImageView
              android:id="@id/fourCardImage"
              android:layout_width="wrap_content"
              android:layout_height="52dp"
              android:layout_marginTop="35dp"
              android:src="@drawable/doc_pic"
              android:scaleType="fitXY"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="parent" />


          <androidx.appcompat.widget.AppCompatTextView
              android:id="@+id/doc_4"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="3dp"
              android:paddingStart="10dp"
              android:text="@string/docs_4"
              android:textColor="@color/black"
              android:background="#3C000000"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toBottomOf="@+id/fourCardImage"
              tools:ignore="RtlSymmetry"
              />

          <androidx.appcompat.widget.AppCompatTextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:paddingStart="10dp"
              android:text="@string/click_here_to_open_doc_in_new_tab"
              android:textSize="11sp"
              android:background="#3C000000"
              android:paddingTop="8dp"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintTop_toBottomOf="@+id/doc_4"
              tools:ignore="RtlSymmetry"
              />



        </androidx.constraintlayout.widget.ConstraintLayout>

      </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

  </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
